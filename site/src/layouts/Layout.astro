---
import { ThemeSwitcher } from '@/components/ThemeSwitcher';
import '@/styles/global.css';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = 'FortiPath - Comprehensive Security Planning' } = Astro.props;
const currentPath = Astro.url.pathname;

const navLinks = [
  { href: '/FortiPath/', label: 'Project Info' },
  { href: '/FortiPath/statistics', label: 'Statistics' },
  { href: '/FortiPath/discussions', label: 'Discussions' },
  { href: '/FortiPath/development-board', label: 'Development Board' },
  { href: '/FortiPath/create-issue', label: 'Create Issue' },
  { href: '/FortiPath/docs', label: 'Docs' },
  { href: '/FortiPath/visualizer', label: 'Visualizer' },
];

// Get commit SHA and build time from environment
const commitSha = import.meta.env.PUBLIC_COMMIT_SHA || 'dev';
const buildTime = import.meta.env.PUBLIC_BUILD_TIME || new Date().toISOString();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/FortiPath/favicon.svg" />
    <title>{title} | FortiPath</title>
  </head>
  <body>
    <div class="drawer lg:drawer-open">
      <input id="drawer" type="checkbox" class="drawer-toggle" />
      <div class="drawer-content flex flex-col">
        <!-- Navbar -->
        <div class="navbar bg-base-200 sticky top-0 z-40 shadow-lg">
          <div class="flex-none lg:hidden">
            <label for="drawer" class="btn btn-square btn-ghost" aria-label="Open menu">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                class="inline-block w-6 h-6 stroke-current"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
            </label>
          </div>
          <div class="flex-1 px-2 mx-2">
            <a href="/FortiPath/" class="text-xl font-bold">FortiPath</a>
          </div>
          <div class="flex-none">
            <ThemeSwitcher client:load />
            <a
              href="https://github.com/cywf/FortiPath"
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-ghost btn-circle"
              aria-label="View on GitHub"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="currentColor"
              >
                <path
                  d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                ></path>
              </svg>
            </a>
          </div>
        </div>

        <!-- Breadcrumbs -->
        <div class="px-4 py-2 bg-base-300">
          <div class="text-sm breadcrumbs">
            <ul>
              <li><a href="/FortiPath/">Home</a></li>
              {currentPath !== '/FortiPath/' && <li>{title}</li>}
            </ul>
          </div>
        </div>

        <!-- Page content -->
        <main class="flex-1 p-6">
          <slot />
        </main>

        <!-- Footer -->
        <footer class="footer footer-center p-10 bg-base-200 text-base-content">
          <div>
            <p class="font-bold">FortiPath</p>
            <p>Comprehensive Security Planning</p>
            <p class="text-sm opacity-70">
              Built with Astro â€¢ Deployed at {new Date(buildTime).toLocaleString()}
            </p>
            <p class="text-xs opacity-50">
              Commit: <code>{commitSha.slice(0, 7)}</code>
            </p>
          </div>
          <div>
            <div class="grid grid-flow-col gap-4">
              <a
                href="https://github.com/cywf/FortiPath/blob/main/LICENSE"
                class="link link-hover"
                target="_blank"
                rel="noopener noreferrer"
              >
                License
              </a>
              <a
                href="https://github.com/sponsors/cywf"
                class="link link-hover"
                target="_blank"
                rel="noopener noreferrer"
              >
                Sponsor
              </a>
              <a
                href="https://github.com/cywf/FortiPath/blob/main/docs/SECURITY.md"
                class="link link-hover"
                target="_blank"
                rel="noopener noreferrer"
              >
                Security
              </a>
            </div>
          </div>
        </footer>
      </div>

      <!-- Sidebar -->
      <div class="drawer-side z-50">
        <label for="drawer" class="drawer-overlay"></label>
        <aside class="bg-base-200 w-64 min-h-full">
          <div class="p-4">
            <h2 class="text-xl font-bold mb-4">Navigation</h2>
            <ul class="menu">
              {
                navLinks.map((link) => (
                  <li>
                    <a
                      href={link.href}
                      class={currentPath === link.href ? 'active' : ''}
                    >
                      {link.label}
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>
        </aside>
      </div>
    </div>

    <script>
      // Initialize theme on page load
      document.addEventListener('DOMContentLoaded', () => {
        const theme = localStorage.getItem('theme') || 'nightfall';
        document.documentElement.setAttribute('data-theme', theme);
      });
    </script>
  </body>
</html>
